			{% endif %}

		</main>

		{% block footer %}
			<footer id="footer" class="c-footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}

    <script src="{{ 'assets/js/manifest.js' | mix }}"></script>
    <script src="{{ 'assets/js/vendor.js' | mix }}"></script>
    <script src="{{ 'assets/js/main.js' | mix }}"></script>
