	<body class="{{body_class}}" data-template="base.twig">

    {% include 'site-header.twig' %}

		<main class="c-content" role="main">

			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					<p>Sorry, no content. I don't know what happened. I'm so sorry.</p>
				{% endblock %}
			</div>

			{% if sidebar %}
				<aside class="layout-sidebar">
					{{ sidebar }}
