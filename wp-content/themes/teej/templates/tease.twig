<article class="c-post--tease" id="tease-{{post.ID}}">
	{% block content %}
		<h2 class="c-post__title">
      <a class="c-post__title-link" href="{{post.link}}">
        {{ post.title }}
      </a>
    </h2>

    <div class="c-post__body">
		  <p>{{ post.get_preview }}</p>
    </div>

		{% if post.get_thumbnail %}
			<img src="{{ post.thumbnail.src }}" class="c-post__featured-image">
		{% endif %}
	{% endblock %}
</article>
